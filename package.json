{
  "name": "meshcentral",
  "version": "1.1.56",
  "keywords": [
    "Remote Device Management",
    "Remote Device Monitoring",
    "Remote Desktop",
    "Remote Terminal",
    "Remote File Access",
    "KVM",
    "2FA",
    "Two-Factor Authentication",
    "Intel Active Management Technology",
    "Intel AMT"
  ],
  "homepage": "https://meshcentral.com",
  "description": "Web based remote computer management server",
  "author": "Ylian Saint-Hilaire <ylianst@gmail.com>",
  "main": "electron-main.js",
  "bin": {
    "meshcentral": "bin/meshcentral"
  },
  "license": "Apache-2.0",
  "files": [
    "*.js",
    "amt",
    "bin",
    "rdp",
    "views",
    "emails",
    "agents",
    "public",
    "translate",
    "readme.txt",
    "license.txt",
    "sample-config.json",
    "sample-config-advanced.json"
  ],
  "dependencies": {
    "@seald-io/nedb": "4.1.2",
    "archiver": "7.0.1",
    "archiver-utils": "5.0.2",
    "call-bind-apply-helpers": "1.0.2",
    "side-channel-list": "1.0.0",
    "side-channel-map": "1.0.1",
    "side-channel-weakmap": "1.0.2",
    "body-parser": "1.20.4",
    "cbor": "5.2.0",
    "compression": "1.8.1",
    "cookie-session": "2.1.1",
    "express": "4.22.1",
    "express-handlebars": "7.1.3",
    "express-ws": "5.0.2",
    "ipcheck": "0.1.0",
    "minimist": "1.2.8",
    "multiparty": "4.2.3",
    "node-forge": "1.3.2",
    "otplib": "12.0.1",
    "ua-client-hints-js": "0.1.2",
    "ua-parser-js": "1.0.40",
    "ws": "8.18.3",
    "yauzl": "2.10.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ylianst/MeshCentral.git"
  },
  "readme": "readme.md",
  "devDependencies": {
    "@yao-pkg/pkg": "^5.11.5",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "scripts": {
    "start": "electron .",
    "build": "pkg meshcentral.js",
    "build:linux-x64": "pkg meshcentral.js --targets node20-linux-x64 --output dist/meshcentral-linux-x64",
    "build:linux-arm64": "pkg meshcentral.js --targets node20-linux-arm64 --output dist/meshcentral-linux-arm64",
    "build:win-x64": "pkg meshcentral.js --targets node20-win-x64 --output dist/meshcentral-win-x64.exe",
    "build:macos-x64": "pkg meshcentral.js --targets node20-macos-x64 --output dist/meshcentral-macos-x64",
    "build:macos-arm64": "pkg meshcentral.js --targets node20-macos-arm64 --output dist/meshcentral-macos-arm64",
    "electron:build:win": "electron-builder --win",
    "electron:build:linux": "electron-builder --linux",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:all": "electron-builder --win --linux --mac"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "views/**/*",
      "emails/**/*",
      "translate/**/*",
      "agents/**/*",
      "package.json",
      "sample-config.json",
      "sample-config-advanced.json",
      "meshcentral-config-schema.json"
    ],
    "targets": [
      "node20-linux-x64",
      "node20-linux-arm64",
      "node20-win-x64",
      "node20-macos-x64",
      "node20-macos-arm64"
    ],
    "outputPath": "dist"
  },
  "build": {
    "appId": "com.meshcentral.app",
    "productName": "MeshCentral",
    "asar": false,
    "directories": { "output": "dist-electron" },
    "files": [
      "*.js",
      "*.json",
      "agents/**/*",
      "amt/**/*",
      "rdp/**/*",
      "views/**/*",
      "emails/**/*",
      "translate/**/*",
      "public/**/*",
      "node_modules/**/*",
      "!node_modules/electron/**/*",
      "!node_modules/electron-builder/**/*",
      "!node_modules/@yao-pkg/**/*"
    ],
    "win": {
      "target": [{ "target": "nsis", "arch": ["x64"] }],
      "icon": "public/favicon-303x303.png"
    },
    "mac": {
      "target": [{ "target": "dmg", "arch": ["x64", "arm64"] }],
      "icon": "public/android-chrome-512x512.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [{ "target": "AppImage", "arch": ["x64"] }],
      "icon": "public/favicon-303x303.png",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
